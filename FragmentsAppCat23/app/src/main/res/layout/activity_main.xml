<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragment_one"
        android:name="com.example.fragmentsappcat23.FirstFragment"
        android:layout_width="208dp"
        android:layout_height="283dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/fragment_two"
        android:name="com.example.fragmentsappcat23.SecondFragment"
        android:layout_width="139dp"
        android:layout_height="139dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/fragment_one"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/fragment_three"
        android:name="com.example.fragmentsappcat23.ThirdFragment"
        android:layout_width="356dp"
        android:layout_height="376dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_one" />

</androidx.constraintlayout.widget.ConstraintLayout>